# ==================== Application Settings ====================
APP_NAME=IntelliPDF
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# ==================== API Settings ====================
API_V1_PREFIX=/api/v1
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:5174"]

# ==================== Database Settings ====================
# SQLite (开发环境)
DATABASE_URL=sqlite+aiosqlite:///./data/intellipdf.db
# PostgreSQL (生产环境)
# DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/intellipdf
DATABASE_ECHO=false
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# ==================== Redis Settings ====================
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# ==================== Gemini AI Settings ====================
# 重要: 请填写你的 Gemini API 密钥
GEMINI_API_KEY=your_gemini_api_key_here
# Gemini API 服务器地址 (如使用代理服务器请修改)
GEMINI_BASE_URL=https://generativelanguage.googleapis.com
# 或使用自定义代理: http://your-proxy-server:port
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=2048

# ==================== OpenAI Settings (备用) ====================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT=60

# ==================== Vector Database Settings ====================
CHROMA_DB_PATH=./data/chroma_db
CHROMA_COLLECTION_NAME=intellipdf_documents
EMBEDDING_DIMENSION=3072
MAX_RETRIEVAL_RESULTS=10

# ==================== File Storage Settings ====================
UPLOAD_DIR=./data/uploads
MAX_FILE_SIZE=104857600
ALLOWED_EXTENSIONS=[".pdf"]

# ==================== PDF Processing Settings ====================
PDF_CACHE_DIR=./data/pdf_cache
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_CHUNKS_PER_DOCUMENT=1000

# ==================== Security Settings ====================
# 生产环境请使用强随机密钥: openssl rand -hex 32
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ==================== Session Settings ====================
SESSION_TIMEOUT=3600
MAX_SESSIONS_PER_USER=5

# ==================== Performance Settings ====================
WORKERS=4
MAX_CONCURRENT_UPLOADS=10
CACHE_ENABLED=true
